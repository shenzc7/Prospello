# =============================================================================
# OKRFlow Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in your values.
# All SSO and Email settings are OPTIONAL - the app works without them.
# =============================================================================

# Database (PostgreSQL) - REQUIRED
DATABASE_URL="postgresql://user:password@localhost:5432/okrflow"

# NextAuth - REQUIRED
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="replace-with-generated-secret-use-openssl-rand-base64-32"

# =============================================================================
# SSO / SINGLE SIGN-ON (OPTIONAL)
# =============================================================================
# Enable SSO by filling in credentials for any provider below.
# Leave empty to disable that provider. Users can still use email/password.
#
# ALLOW_PASSWORD_AUTH=true   → Allow email/password login (default)
# REQUIRE_SSO=true           → Force SSO only, disable password login
# =============================================================================
ALLOW_PASSWORD_AUTH=true
REQUIRE_SSO=false

# Google SSO
# Setup: https://console.cloud.google.com/apis/credentials
# Redirect URI: {NEXTAUTH_URL}/api/auth/callback/google
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Slack SSO
# Setup: https://api.slack.com/apps
# Redirect URI: {NEXTAUTH_URL}/api/auth/callback/slack
# Scopes: identity.basic, identity.email, identity.avatar
SLACK_CLIENT_ID=""
SLACK_CLIENT_SECRET=""

# Microsoft Azure AD SSO
# Setup: https://portal.azure.com → Azure AD → App registrations
# Redirect URI: {NEXTAUTH_URL}/api/auth/callback/azure-ad
AZURE_AD_CLIENT_ID=""
AZURE_AD_CLIENT_SECRET=""
AZURE_AD_TENANT_ID=""

# =============================================================================
# EMAIL / SMTP (OPTIONAL)
# =============================================================================
# Enable email for invitations, reminders, and notifications.
# Without email, invitations still work - users copy/paste the invite link.
#
# Popular providers:
# - Gmail: smtp.gmail.com:587 (use App Password)
# - SendGrid: smtp.sendgrid.net:587 (user: "apikey")
# - Resend: smtp.resend.com:465 (user: "resend")
# - AWS SES: email-smtp.{region}.amazonaws.com:587
# =============================================================================
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM=""

# =============================================================================
# INTEGRATIONS (OPTIONAL)
# =============================================================================
# Webhook URLs for Slack/Teams notifications
SLACK_WEBHOOK_URL=""
TEAMS_WEBHOOK_URL=""

# Cron job authentication
CRON_SECRET="replace-with-random-secret"

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/okrflow?schema=public"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-change-in-production-make-it-very-long-and-random"
REQUIRE_SSO=false
ALLOW_PASSWORD_AUTH=true
NEXT_PUBLIC_ALLOW_PASSWORD_AUTH=true
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
SLACK_CLIENT_ID="your-slack-client-id"
SLACK_CLIENT_SECRET="your-slack-client-secret"
AZURE_AD_CLIENT_ID="your-azure-client-id"
AZURE_AD_CLIENT_SECRET="your-azure-client-secret"
AZURE_AD_TENANT_ID="your-tenant-id"

# Branding (optional - defaults provided)
NEXT_PUBLIC_BRAND_NAME="OKRFlow"
NEXT_PUBLIC_BRAND_TAGLINE="Build, track, and align your OKRs."
NEXT_PUBLIC_BRAND_LOGO_URL=""

# Prisma Logging (for development - shows all database queries)
PRISMA_LOG_LEVEL="query"
PRISMA_LOG_QUERIES="true"

# Notifications & integrations
SLACK_WEBHOOK_URL=""
TEAMS_WEBHOOK_URL=""
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM=""
CRON_SECRET="set-a-random-long-cron-secret"
# Cron calls must send header: x-cron-secret: $CRON_SECRET

SCHEDULER_INTERVAL_MS=900000
DISABLE_INTERNAL_SCHEDULER="false"
SKIP_SCHEDULER_FOR_BUILD="false"

# Vercel/Production Configuration
# NEXTAUTH_URL="https://your-app.vercel.app"  # For production
# DATABASE_URL="postgresql://username:password@host:5432/database"  # For production

# Copy this file to .env.local and fill in your values
